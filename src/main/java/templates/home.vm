#include("header.vm")
	
<div class="jumbotron">
  	<h1 class="display-4">FoodStuffs!</h1>
  	
  	<p class="lead">Here you can manage your foodstuffs in your fridge!</p>
  	
  	<hr class="my-4">
  	
  	<p class="lead">
    	<a class="btn btn-primary btn-lg" href="https://www.uni-ruse.bg/en" role="button">University of Ruse</a>
	</p>
</div>
 
<div class="container">
	<div class="row">
	    #foreach($item in $foodstuffs)
			<div class="col-4">
		        <div class="card">
				  	<div class="card-body">
					    <h5 class="card-title">$item.name</h5>
					    <p class="card-text">$item.weight kg</p>
					    <p class="card-text">$item.bestBefore</p>
					    <p class="card-text">$item.eneryValue</p>
					    <p class="card-text">$ $item.price</p>
					    
					    <a href="#" class="btn btn-danger delete__foodstuff-button" data-id="$item.id">Delete</a>
				  	</div>
				</div>				
			</div>
	    #end
	</div>
</div>

<div class="container">
	<div class="row">
		<div class="col-12">
			<form action="/Foodstuffs/webapi/foodstuffs" method="POST" id="addFoodstuff">
				<div class="form-group">
			    	<label for="name">Name</label>
			    	<input type="text" name="name" class="form-control" id="name" placeholder="Enter name..">
			  	</div>
			  	
			  	<div class="form-group">
			    	<label for="weight">Weight</label>
			    	<input type="number" name="weight" class="form-control" id="weight" placeholder="Enter weight..">
			  	</div>
			  	
			  	<div class="form-group">
			    	<label for="bestBefore">Best Before</label>
			    	<input type="date" name="bestBefore" class="form-control" id="bestBefore" placeholder="Enter best before date..">
			  	</div>
			  	
			  	<div class="form-group">
			    	<label for="eneryValue">Enery Value</label>
			    	<input type="number" name="eneryValue" class="form-control" id="eneryValue" placeholder="Enter Enery Value..">
			  	</div>
			  	
			  	<div class="form-group">
			    	<label for="price">Price</label>
			    	<input type="number" name="price" class="form-control" id="price" placeholder="Enter price..">
			  	</div>
			  	
			  	<button type="submit" class="btn btn-primary">Submit</button>
			</form>
		</div>
	</div>
</div>
	
#include("footer.vm")